{
  "firestore": {
    "database": "(default)",
    "location": "us-east1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "source": "functions",
    "codebase": "default",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/test",
        "function": "test"
      },
      {
        "source": "/upload",
        "function": "upload"
      },
      {
        "source": "/stats",
        "function": "stats"
      },
      {
        "source": "/maps",
        "function": "maps"
      },
      {
        "source": "/graph",
        "function": "graph"
      },
      {
        "source":"/positions",
        "function": "positions"
      }, 
      {
        "source": "/shots",
        "function": "shots"
      },
      {
        "source": "/processAllReplays",
        "function": "processAllReplays"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
